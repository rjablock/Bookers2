<div class="container">
  <div class="row">

    <div class="col-3">
      <h2>User info</h2>
      <%= image_tag @book.user.get_profile_image(100,100) %>

      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @book.user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @book.user.introduction %></th>
	        </tr>
	      </tbody>
	     </table>
	     <% if @book.user == current_user %>
	        <%= link_to edit_user_path(current_user), class:"btn btn-outline-secondary btn-block" do %>
	          <i class="fa-solid fa-user-gear" style="color: #787878;"></i>
	        <% end %>
	     <% else %>
	        <%= link_to user_path(current_user.id), class:"btn btn-outline-secondary btn-block" do %>
	          <i class="fa-solid fa-user-gear" style="color: #787878;"></i>
	        <% end %>
	     <% end %>

      <h2 class="mt-3">New Book</h2>

      <%= form_with model: Book.new do |f| %>

      <div class="form-group">
      <label>Title</label><br>
      <%= f.text_field :title %>
      </div>

      <div class="form-group">
      <label>Opinion</label><br>
      <%= f.text_area :body %>
      </div>

      <div class="form-group">
      <%= f.submit 'Create Book', class:"btn btn-success" %>
      </div>

      <% end %>

    </div>

    <div class="col-1"></div>
    <div class="col-8">
      <h2>Book detail</h2>
        <table class="table">
        <tbody>
          <tr>
            <td><%= link_to user_path(@book.user.id) do %>
                 <%= image_tag @book.user.get_profile_image(100,100) %>
                 <br>
                 <%= @book.user.name %></td>
                <% end %>
            <td><%= link_to book_path(@book) do %>
                <%= @book.title %>
                <% end %></td>
            <td><%= @book.body %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>