<div class="container">
<div class="row">
<div class="col-md-3">
  
  <% if newbook.errors.any? %>
  <h3><%= newbook.errors.count %>errors prohibited this obj from being saved:</h3>
  <ul>
    <% newbook.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
  
  <h2>User info</h2>

      <%= image_tag user.get_profile_image(100,100) %>

      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
	        </tr>
	      </tbody>
	     </table>
	     <% if user == current_user %>
	        <%= link_to edit_user_path(current_user), class:"btn btn-outline-secondary btn-block" do %>
	          <i class="fas fa-user-cog"></i>
	        <% end %>
	     <% else %>
	        <%= link_to edit_user_path(user.id), class:"btn btn-outline-secondary btn-block" do %>
	          <i class="fas fa-user-cog"></i>
	        <% end %>
	     <% end %>

      <h2 class="mt-3">New book</h2>

      <%= form_with model: newbook do |f| %>

      <div class="form-group">
      <label>Title</label><br>
      <%= f.text_field :title %>
      </div>

      <div class="form-group">
      <label>Opinion</label><br>
      <%= f.text_area :body %>
      </div>

      <div class="form-group">
      <%= f.submit 'Create Book', class:"btn btn-success" %>
      </div>

      <% end %>

</div>