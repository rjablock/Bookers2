<div class="container">
  <div class="row">
    
    <%= render 'userinfo', user: @user %>
    
    <div class="col-1"></div>
    <div class="col-8">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= image_tag book.user.get_profile_image(80,80) %></td>
            <td><%= link_to book_path(book.id) do %>
                <%= book.title %>
                <% end %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>