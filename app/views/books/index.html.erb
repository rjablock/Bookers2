<div class="container">
  <div class="row">
    <div class="col-3">
      <h2>User info</h2>
      <%= image_tag current_user.get_profile_image(100,100) %>
      
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= current_user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= current_user.introduction %></th>
	        </tr>
	      </tbody>
	     </table>
	     
	     <%= link_to edit_user_path(current_user), class:"btn btn-outline-secondary btn-block" do %>
	          <i class="fa-solid fa-user-gear" style="color: #787878;"></i>
	      <% end %>
      
      <h2 class="mt-3">New Book</h2>

      <%= form_with model: @book do |f| %>

      <div class="form-group">
      <label>Title</label><br>
      <%= f.text_field :title %>
      </div>

      <div class="form-group">
      <label>Opinion</label><br>
      <%= f.text_area :body %>
      </div>

      <div class="form-group">
      <%= f.submit 'Create Book', class:"btn btn-success" %>
      </div>

      <% end %>

    </div>
    <div class="col-1"></div>
    <div class="col-8">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= image_tag book.user.get_profile_image(100,100) %></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>