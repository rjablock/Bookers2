<div class='container'>
  <div class='row'>
    <div class='col-md-3'>

    <%= render 'books/userinfo', user: @user, newbook: @book %>

    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        <table class="table">
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= link_to user_path(@user) do %>
                 <%= image_tag @user.get_profile_image(100,100) %></td>
                <% end %>
            <td><%= link_to book_path(book.id) do %>
                <%= book.title %></td>
                <% end %>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>